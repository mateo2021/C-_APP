@using OdeToFood.Core
@model Restaurant


    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="panel-body" >
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>

        <div class="panel-footer">
            <a asp-page="./Detail" asp-route-restaurantID="@Model.Id" class="btn btn-light">
                Show details
            </a>
          
        
                <a asp-page="./Edit" asp-route-restaurantID="@Model.Id" class="btn btn-light">
                    Edit Restaurant
                </a>
        
        
                <a asp-page="./Delete" asp-route-restaurantID="@Model.Id" class="btn btn-light"> Delete </a>
        

        </div>


    </div>